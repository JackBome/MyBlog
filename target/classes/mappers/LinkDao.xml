<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzj.blog.dao.LinkDao">
    <!--增加link-->
    <insert id="addLink" parameterType="com.fzj.blog.pojo.Link">
        INSERT INTO link(id,linkName,linkURL,orderNo)VALUES(#{id},#{linkName},#{linkURL},#{orderNo});
    </insert>

    <!--删除link-->
    <delete id="delLink" parameterType="java.lang.Integer">
        DELETE FROM link WHERE id=#{id};
    </delete>

    <!--更新link-->
    <update id="updateLink" parameterType="com.fzj.blog.pojo.Link">
        UPDATE link  SET linkName=#{linkName},linkUrl=#{linkUrl},orderNo=#{orderNo} WHERE id=#{id};
    </update>

    <!--根据ID查询-->
    <select id="getLinkById" parameterType="com.fzj.blog.pojo.Link">
        SELECT linkName,linkUrl,orderNo FROM link WHERE id=#{id};
    </select>

    <!--查询多个Link-->
    <select id="queryAllLink" resultType="com.fzj.blog.pojo.Link">
        SELECT linkName,linkUrl,orderNo FROM link ORDER BY id DESC limit #{offset},#{limit};
    </select>
</mapper>